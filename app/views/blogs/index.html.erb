<p style="color: green"><%= notice %></p>

<h1 class="mobutu">Blogs</h1>

<div id="blogs">
  <% @blogs.each do |blog| %>
    <%= render blog %>
    <p>
      <%= link_to "Show this blog", blog %>
    </p>
  <% end %>

  <% @categories.each do |cat| %>
    <%= link_to cat.category, blogs_path(:cate => cat.id) %> <%= cat.blogs.count %>
  <% end %>

</div>

